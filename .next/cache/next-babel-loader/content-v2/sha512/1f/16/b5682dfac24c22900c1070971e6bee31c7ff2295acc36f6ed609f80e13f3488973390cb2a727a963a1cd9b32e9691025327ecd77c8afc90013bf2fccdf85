-challenge/pages/api/reports.ts"],"names":["connect","cors","rawReports","reports","elements","map","id","state","payload","type","reportType","status","message","handler","use","get","req","res","resolved","blocked","query","filter","report","active","json","err","Error","put","reportId","error","item","body","ticketState"],"mappings":"AAEA,OAAOA,OAAP,MAAoB,cAApB;AACA,OAAOC,IAAP,MAAiB,MAAjB;AACA,OAAOC,UAAP,MAAuB,oBAAvB;AAEA,IAAIC,OAAO,GAAGD,UAAU,CAACE,QAAX,CAAoBC,GAApB,CAAwB,CAAC;AAAEC,EAAAA,EAAF;AAAMC,EAAAA,KAAN;AAAaC,EAAAA;AAAb,CAAD,KAA2B;AAAA;;AAC7D,SAAO;AAAEF,IAAAA,EAAF;AAAMG,IAAAA,IAAI,EAAED,OAAO,CAACE,UAApB;AAAgCC,IAAAA,MAAM,EAAEJ,KAAxC;AAA+CK,IAAAA,OAAO,sBAAEJ,OAAO,CAACI,OAAV,+DAAqB;AAA3E,GAAP;AACD,CAFW,CAAd;AAIA,MAAMC,OAAO,GAAGb,OAAO,GAAGc,GAAV,CAAcb,IAAI,EAAlB,CAAhB;AAEAY,OAAO,CAACE,GAAR,CAAY,OAAOC,GAAP,EAA4BC,GAA5B,KAAqD;AAC/D,MAAI;AACF,QAAIC,QAAa,GAAG,EAApB;AACA,QAAIC,OAAY,GAAG,EAAnB;;AAEA,QAAGH,GAAG,CAACI,KAAJ,CAAUF,QAAb,EAAuB;AACrBA,MAAAA,QAAQ,GAAGf,OAAO,CAACkB,MAAR,CAAgBC,MAAD,IAAYA,MAAM,CAACX,MAAP,KAAkB,UAA7C,CAAX;AACD;;AAED,QAAGK,GAAG,CAACI,KAAJ,CAAUD,OAAb,EAAsB;AACpBA,MAAAA,OAAO,GAAGhB,OAAO,CAACkB,MAAR,CAAgBC,MAAD,IAAYA,MAAM,CAACX,MAAP,KAAkB,SAA7C,CAAV;AACD;;AAED,UAAMY,MAAM,GAAGpB,OAAO,CAACkB,MAAR,CAAgBC,MAAD,IAAYA,MAAM,CAACX,MAAP,KAAkB,MAA7C,CAAf;AAGA,WAAOM,GAAG,CAACN,MAAJ,CAAW,GAAX,EAAgBa,IAAhB,CAAqB;AAAErB,MAAAA,OAAO,EAAE;AAAEoB,QAAAA,MAAF;AAAUL,QAAAA,QAAV;AAAoBC,QAAAA;AAApB;AAAX,KAArB,CAAP;AACD,GAhBD,CAgBE,OAAMM,GAAN,EAAW;AACX,UAAM,IAAIC,KAAJ,CAAUD,GAAV,CAAN;AACD;;AAAA;AACF,CApBD;AAsBAZ,OAAO,CAACc,GAAR,CAAY,YAAZ,EAA0B,OAAOX,GAAP,EAA4BC,GAA5B,KAAqD;AAC7E,MAAI;AACF,QAAG,CAACD,GAAG,CAACI,KAAJ,CAAUQ,QAAd,EAAwB;AACtB,aAAOX,GAAG,CAACN,MAAJ,CAAW,GAAX,EAAgBa,IAAhB,CAAqB;AAAEK,QAAAA,KAAK,EAAE;AAAT,OAArB,CAAP;AACD;;AAED,UAAM;AAAED,MAAAA;AAAF,QAAeZ,GAAG,CAACI,KAAzB;AACAjB,IAAAA,OAAO,GAAGA,OAAO,CAACE,GAAR,CAAayB,IAAD,IAAU;AAC9B,UAAGA,IAAI,CAACxB,EAAL,KAAYsB,QAAf,EAAyB;AACvBE,QAAAA,IAAI,CAACnB,MAAL,KAAgBK,GAAG,CAACe,IAAJ,CAASC,WAAzB;AACD;;AAED,aAAOF,IAAP;AA